#fortune -s | cowsay -f stegosaurus | lolcat

#### personal MOTD
MOTD=~/.MOTD
if [ -f "$MOTD" ]; then
  MDV_PATH=$(which mdv)
  if [ -x "$MDV_PATH" ] ; then
    mdv "$MOTD"
  else
    echo "no mdv"
    cat "$MOTD"
  fi
fi

