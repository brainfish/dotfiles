syntax enable
set smartindent
set autoindent
set tabstop=8
set shiftwidth=4
set softtabstop=0
set expandtab
set smarttab

set list
set listchars=tab:!·,trail:·

filetype plugin indent on

set ruler

set undolevels=1000

set errorbells
set visualbell
set showmatch

set hlsearch
set smartcase
set incsearch
